theme: herman
dest: _site/style/

display:
  access: public

package: ./package.json
shortcutIcon: ./favicon.ico
verbose: true

groups:
  Tools:
    tools-borders: Borders
    tools-grids: Grids
    tools-grid-vars: CSS Grid Variables
  Design Tokens:
    config-animation: Animations
    config-borders: Borders
    config-colors: Colors
    config-grids: Grids
    config-fonts: Fonts
    config-scale: Ratios & Sizes

herman:
  extraLinks:
    - name: 'Eleventy'
      url: http://www.11ty.io
    - name: 'Accoutrement'
      url: https://oddbird.net/accoutrement/
    - name: 'Herman'
      url: https://oddbird.net/herman/
  fontpath: 'assets/fonts/'
  sass:
    includepaths: ['src/scss']
    includes: ['config/manifest']
    jsonfile: 'assets/css/json.css'
