{
  "name": "mia",
  "title": "Miriam Suzanne",
  "version": "1.0.0",
  "description": "The art & code & thoughts of Miriam Suzanne",
  "homepage": "https://www.miriamsuzanne.com",
  "author": {
    "name": "Miriam Suzanne",
    "email": "miriam@oddbird.net"
  },
  "contributors": [
    "Jonny Gerig Meyer <jonny@oddbird.net>"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/mirisuzanne/mia.git"
  },
  "private": true,
  "engines": {
    "node": "v16.13.0"
  },
  "scripts": {
    "js": "rollup -c",
    "sass": "sass content/scss:_site/css",
    "sassdoc": "sassdoc content/scss/screen.scss",
    "prettier:js": "prettier --write \"**/*.js\"",
    "prettier:other": "prettier --write \"**/*.{json,yml}\"",
    "eslint": "eslint \"*.js\" \"**/*.js\" --fix",
    "lint": "run-p lint:* prettier:other",
    "lint:js": "run-s prettier:js eslint",
    "lint:sass": "stylelint \"**/*.scss\" --fix",
    "eleventy": "eleventy",
    "eleventy:serve": "eleventy --serve",
    "watch:sass": "sass --watch content/scss:_site/css",
    "watch:js:compile": "rollup -c --watch",
    "watch:js": "run-p watch:js:*",
    "assets:clean": "rm -rf ./_built/",
    "serve": "npm-run-all build:assets build:styles -p eleventy:serve watch:js watch:sass",
    "build:styles": "run-s sass",
    "build:assets": "npm-run-all assets:clean -p js",
    "build": "run-s build:assets build:styles eleventy"
  },
  "devDependencies": {
    "@11ty/eleventy": "^1.0.1",
    "@11ty/eleventy-fetch": "^3.0.0",
    "@11ty/eleventy-img": "^2.0.0",
    "@11ty/eleventy-plugin-rss": "^1.1.2",
    "@11ty/eleventy-plugin-syntaxhighlight": "^3.0.1",
    "@babel/core": "^7.6.4",
    "@babel/preset-env": "^7.6.3",
    "@rollup/plugin-babel": "^5.3.1",
    "@rollup/plugin-commonjs": "^22.0.0-14",
    "@rollup/plugin-node-resolve": "^13.1.3",
    "accoutrement": "^4.0.0",
    "cascading-color-systems": "^0.1.0-beta.14",
    "chokidar-cli": "^2.0.0",
    "core-js": "^3.3.2",
    "cssremedy": "^0.1.0-beta.2",
    "eslint": "^6.5.1",
    "eslint-config-prettier": "^6.4.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-prettier": "^3.1.1",
    "eslint-plugin-simple-import-sort": "^5.0.2",
    "fontfaceobserver": "^2.1.0",
    "husky": "^4.2.3",
    "js-yaml": "^3.13.1",
    "lint-staged": "^10.0.8",
    "lodash": "^4.17.15",
    "lunr": "^2.3.8",
    "markdown-it": "^12.3.2",
    "markdown-it-attrs": "^4.1.4",
    "markdown-it-bracketed-spans": "^1.0.1",
    "markdown-it-footnote": "^3.0.1",
    "markdown-it-mark": "^3.0.0",
    "netlify-plugin-cache": "^1.0.3",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.18.2",
    "rollup": "^2.1.0",
    "sass": "^1.54.0",
    "sassdoc": "^2.7.1",
    "sassdoc-theme-herman": "^4.0.2",
    "stylelint": "^14.9.1",
    "stylelint-config-prettier": "^9.0.3",
    "stylelint-config-standard-scss": "^5.0.0",
    "stylelint-prettier": "^2.0.0",
    "stylelint-scss": "^4.3.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.scss": [
      "stylelint --fix"
    ],
    "*.{json,yml}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "@fontsource/alegreya": "^4.5.7",
    "@fontsource/jetbrains-mono": "^4.5.9",
    "dotenv": "^16.0.1",
    "sanitize-html": "^2.7.0"
  }
}
