{% import "utility.macros.njk" as utility %}

<nav aria-label="primary">
  {% for name, url in nav.site %}
    {% set attrs = {
      'aria-current': ('page' if (page.url == url) else none),
      'rel': ('home' if (url == '/') else none)
    } %}
    <div>
      <a href="{{ url | url }}" {{ utility.show_attrs(attrs) }}>
        {{- name -}}
      </a>
    </div>
  {% endfor %}
</nav>
