{% if hero.img %}
<figure
  data-section="hero"
  data-area="main-left">
  <div data-content="hero">
    <img
      src="{{ site.images + hero.img }}"
      alt="{{ hero.alt or '' }}"
      class="hero-image" />
    {% if hero.caption %}
    <figcaption class="hero-caption" data-theme="invert">
      {{ hero.caption | md | safe }}
    </figcaption>
    {% endif %}
  </div>
</figure>
{% endif %}
