{% import 'contact.macros.njk' as contact %}

<section id="author" aria-labelledby="author-label" class="h-card p-author vcard">
  {% img
    'headshots/rss.jpg',
    'Miriam with asymmetrical orange hair at a mic, smiling',
    'face',
    {'class': 'photo u-photo'}
  %}

  <h2 id="author-label">
    <a href="{{ [site.url, 'who/'] | join | url }}" rel="author" class="p-name u-url u-uid fn url uid">
      {{- site.author -}}
    </a>
  </h2>

  <div class="p-note">
    {{ bios.intro | md | safe }}
  </div>

  {{ contact.links(social) }}
</section>
