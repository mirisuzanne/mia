{% import "utility.macros.njk" as utility %}

{% if series %}
  {% set to = collections[series] | getSeries(page) %}
  {% if to %}
    <nav
      data-series="{{ series | slug }}"
      data-area="full"
      data-flow="grid">
      {{ utility.prev_next(to.prev, 'prev') }}
      &nbsp;{# forces a new grid rowâ€¦ #}
      {{ utility.prev_next(to.next, 'next') }}
    </nav>
  {% endif %}
{% endif %}
