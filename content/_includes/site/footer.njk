{% import 'contact.macros.njk' as contact %}

{% if not (page.url == '/contact/') %}
  <h2>Contact me</h2>
  {{ contact.form(
    attrs={'data-footer': 'contact'},
    url=page.url
  ) }}
{% endif %}

<footer>
  <p>
    Copyright &copy; {% getDate 'year' %}
    <strong>{{ site.author }}</strong>
  </p>
  {{ colophon | md | safe }}
</footer>

