{% import 'contact.macros.njk' as contact %}

<footer>
  <div class="h-card p-author vcard">
    {% img
      'headshots/rss.jpg',
      'Miriam with asymmetrical orange hair at a mic, smiling',
      'face',
      {'class': 'photo u-photo'}
    %}

    <a href="https://miariamsuzanne.com/who/" rel="author" class="p-name u-url u-uid fn url uid">
      {{- site.author -}}
    </a>

    {{ contact.links(social) }}
  </div>

  {% if not is_contact %}
    {{ contact.form(
      attrs={'data-footer': 'contact'},
      url=page.url
    ) }}
  {% endif %}

  <div>
    <p>Copyright &copy; {% getDate 'year' %} {{ site.author }}</p>
    {{ colophon | md | safe }}
  </div>
</footer>

