{% import 'utility.macros.njk' as utility %}
{% import 'contact.macros.njk' as contact %}

<footer
  data-layout="footer">

  {% set title %}
    Copyright Â© {% getDate 'year' %}
  {% endset %}

  <div class="section-header">
    <h2 class="section-title">
      {{ title | typogr | safe }}
    </h2>
  </div>

  <div data-footer="content">
    {% if page.url | url != '/who/' %}
      <section data-footer="bio">
        <h3>
          <a href="mailto:{{ site.email }}">{{ site.author }}</a>
        </h3>

        {% set who = collections.all | getPage('/who/') | first %}
        {{ who.data.summary | md | safe }}
      </section>
    {% endif %}

    {% if page.url | url != '/contact/' %}
      <section data-footer="contact">
        {{ contact.form() }}
      </section>
    {% endif %}
  </div>

  <div data-layout="flag"></div>
</footer>

