{% import 'contact.macros.njk' as contact %}

<footer>
  <div class="h-card p-author">
    Copyright &copy; {% getDate 'year' %}
    <a href="https://miariamsuzanne.com/who/" rel="author" class="p-name u-url u-uid">{{ site.author }}</a>
    {{ contact.links(social) }}
  </div>

  {% if not is_contact %}
    {{ contact.form(
      attrs={'data-footer': 'contact'},
      url=page.url
    ) }}
  {% endif %}

  <div data-footer="colophon">

  {{ colophon | md | safe }}
  </div>
</footer>

