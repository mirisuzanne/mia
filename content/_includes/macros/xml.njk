{% macro summary(post, site) -%}
  {{- post.data.summary | mdInline if post.data.summary else '' -}}
  {{- repost(post, site) -}}
{%- endmacro %}

{% macro entry(post, site) %}
  {{- (post.data.sub | md if post.data.sub else '') | safe -}}
  {{- (post.data.summary | md if post.data.summary else '') | safe -}}
  {{- repost(post, site) -}}

  {%- if post.data.hero.img -%}
    {{ post.data.hero.img | img(hero.alt, 'hero', {class: 'hero-img'}) | safe }}
  {%- endif -%}

  {{- post.templateContent | safe -}}
{%- endmacro %}

{% macro repost(post, site) -%}
  {%- set is_link = post.data.venue and post.data.url and post.data.tags | includes(nav.type.link) -%}

  {%- if is_link -%}
    <p><a href="{{ post.data.url | url }}" class="u-repost-of u-uid">Reposted from {{ post.data.venue }} Â»</a></p>
  {%- endif -%}
{%- endmacro %}
