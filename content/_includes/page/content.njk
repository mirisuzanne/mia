{%- import 'utility.macros.njk' as utility -%}

{% if summary %}
  <div id="summary" {{ utility.show_attrs(attrs.summary) }}>
    {{ summary | md | safe }}
  </div>
{% endif %}

{% if content %}
  {% if summary %}<hr />{% endif %}

  <div id="content" {{ utility.show_attrs(attrs.content) }}>
    {{ content | typogr | safe }}

    {% if tags and ('elsewhere' in tags) %}
      <p>
        <a rel="bookmark" href="{{ url }}">
          More at {{ venue }} Â»
        </a>
      </p>
    {% endif %}
  </div>
{% endif %}
