{%- import "utility.macros.njk" as utility -%}
{%- set series_posts = collections[series] if series else [] -%}

{%- if series_posts | length > 1 -%}
<nav aria-labelledby="series-summary">
  <details id="series">
    <summary id="series-summary">
      Part of a series tagged '{{ series | displayName }}'
    </summary>
      <ol>
        {%- for item in collections[series] | sortBy('data.date') -%}
          <li>
            <a href="{{ item.url | url }}">{{ item.data.banner | mdInline }}</a>
            &ndash; {{ utility.datetime(item.data.date) }}
          </li>
        {%- endfor -%}
      </ol>
  </details>
</nav>
{%- endif -%}
