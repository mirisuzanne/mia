{% import "utility.macros.njk" as utility %}
{% import "cards.macros.njk" as cards %}


{% macro get_calendar(
  events_group,
  collections,
  page
) %}
  {% set title = 'events…' %}
  {% set org_title = 'orgs' %}
  {% set events = collections.all | getPage(page) | getEvents %}

  {% if events_group == 'all' %}
    {% set title = 'episodes' %}
    {% set events = collections.all | getEvents %}
  {% elif events_group %}
    {% set tag_name = events_group | displayName %}
    {% set title %}
      '{{ tag_name }}' episodes
    {% endset %}
    {% set org_title %}
      '{{ tag_name }}' orgs
    {% endset %}
    {% set events = collections.all | getEvents(events_group) %}
  {% endif %}

  {{ show_orgs(
    org_title,
    events_group,
    collections
  ) }}

  {% if events %}
    {{ section(
      title=title,
      events=events,
      all=collections,
      self=page.url
    ) }}
  {% endif %}
{% endmacro %}


{% macro show_orgs(
  title,
  events_group,
  collections
) %}
  {% if events_group %}
    {% set orgs = collections.orgs %}
    {% set orgs = orgs if (events_group == 'all') else orgs | withTag(events_group) %}

    {% if orgs | length %}
      <section
        data-orgs="section">

        {{ utility.section_title(
          title=title
        ) }}

        <div data-orgs="list">
          {% for item in orgs %}
            {% set title = item.data.banner or item.data.renderData.title or item.data.title %}
            <article
              data-orgs="item">
              <time
                data-meta="orgs"
                datetime="{{ item.data.start | getDate('iso') }}">
                {{ item.data.start | getDate('yyyy') }}->
              </time>
              <h3 data-title="orgs">
                {{ utility.link_if(title, item.url) }}
              </h3>
              {% if item.data.sub %}
                <p data-meta="org-sub">
                  {{ item.data.sub | mdInline | safe }}
                </p>
              {% endif %}
            </article>
          {% endfor %}
        </div>
      </section>
    {% endif %}
  {% endif %}
{% endmacro %}


{% macro section(
  title,
  events,
  all,
  self
) %}
  {% set title = [events | countEvents, title] | join(' ') %}
  {% if events | length %}
    {{ cards.section(
      title,
      content=groups(events, all, self)
    ) }}
  {% endif %}
{% endmacro %}


{% macro groups(
  events,
  all,
  self
) %}
  {% set this_year = none | getDate('year') %}

  {% for segment in events %}
    {% if (segment.group == this_year) and not loop.first %}
      <hr data-divider>
    {% endif %}

    {{ group(
      title=segment.group,
      events=segment.data,
      all=all,
      self=self
    ) }}
  {% endfor %}
{% endmacro %}


{% macro group(
  title,
  events,
  all,
  self
) %}
  {% set is_future = title | groupName %}
  {% set events = events | reverse if (not is_future) else events %}

  {{ cards.group(
    title=title,
    content=list(events, all, self)
  ) }}
{% endmacro %}


{% macro list(
  events,
  all,
  self
) %}
  {% for item in events %}
    {{ event(item, all, self) }}
  {% endfor %}
{% endmacro %}


{% macro event(
  item,
  all,
  self
) %}
  {%- set tags = item.tags | publicTags -%}
  {%- set not_me = ('inspiration' in tags) -%}
  {%- set is_self = (item.page.url == self) -%}

  {{ cards.event(
    title=title(item, is_self, not_me),
    meta=meta(item, tags, all),
    feature=item.feature
  ) }}
{% endmacro %}


{% macro title(
  item,
  is_self=false,
  not_me=false
) %}
  {# Venue Link #}
  {%- set venue_name = item.event.venue or item.page.data.venue -%}
  {%- set venue_url = item.event.url or item.page.data.url or item.page.url -%}
  {%- set venue = utility.link_if(venue_name, venue_url) if venue_name else none -%}
  {%- set venue = ['@', venue] | join(' ') if venue else none -%}

  {# Title Link #}
  {%- set title_name = item.event.title or item.page.data.title -%}
  {%- set url = none if is_self else item.page.url -%}
  {%- set url = (url or venue_url) if (not venue) else url -%}
  {%- set title = utility.link_if(title_name | mdInline, url) -%}
  {%- set title = ['See Also:', title] | join(' ') if not_me else title -%}

  {{ title | safe }}
  {{ venue | safe }}
{% endmacro %}


{% macro meta(
  item,
  tags,
  all
) %}
  {%- set date_format = 'since' if (item.group | groupName == 'ongoing') else 'md' -%}
  {%- set venue_adr = item.event.adr or item.page.data.adr -%}

  {{ datetime(item, date_format) }}

  {% if venue_adr %}
    | {{ venue_adr }}
  {% endif %}

  {# {% if tags %}
    {% if venue_adr %}»{% else %}|{% endif %}
    {{ utility.tag_list(tags | sort, all) }}
  {% endif %} #}

  {% set summary = item.page.data.sub if item.event else (item.page.data.summary or item.page.data.sub) %}

  {% if summary %}
    {{ summary | md | safe }}
  {% endif %}
{% endmacro %}


{% macro datetime(
  item,
  format
) %}
  {%- set start = item.start | getDate('year') -%}
  {%- set end = item.end | getDate('year') -%}

  <time datetime="{{ item.date | getDate('iso') }}">
    {% if (format == 'since') or (start == end) %}
      {{ item.date | getDate(format) }}
    {% else %}
      {{ start }}—{{ end }}
    {% endif %}
  </time>
{% endmacro %}
