{% import "utility.macros.njk" as utility %}

{% macro section(
  title,
  content=none
) %}
  {% set content = content if (content != none) else caller() %}

  <section
    data-area="full"
    data-flow="grid">
    {{ title | safe }}

    <div
      data-area="full"
      data-layout="card-groups">
      {{ content }}
    </div>
  </section>
{% endmacro %}

{% macro group(
  title,
  content=none
) %}
  {% set content = content if (content != none) else caller() %}

  <section
    data-card-group="{{ title | slug }}">
    <h3
      data-cards="grouper">
      <span>{{ title }}</span>
    </h3>
    {{ content }}
  </section>
{% endmacro %}
