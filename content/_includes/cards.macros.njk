{% import "utility.macros.njk" as utility %}

{% macro section(
  title,
  content=none
) %}
  {% set content = content if (content != none) else caller() %}

  <section data-section="cards">
    {{ utility.section_title(title) }}

    <div
      data-layout="card-groups">
      {{ content }}
    </div>
  </section>
{% endmacro %}

{% macro group(
  title,
  content=none
) %}
  {% set content = content if (content != none) else caller() %}

  <section
    data-card-group="{{ title | slug }}">
    <header
      data-cards="grouper">
      <h3 data-cards="group-title">
        {{ title | safe }}
      </h3>
    </header>
    <div data-layout="cards">
      {{ content | safe }}
    </div>
  </section>
{% endmacro %}

{% macro event(
  name,
  meta,
  summary,
  feature,
  is_old=false,
  index=0
) %}
{% set name = name | typogr %}
{% set id = [name | striptags | slug, index] | join('-') %}
<article
  data-card="item"
  aria-labelledby="{{ id }}"
  {{ utility.attr_if('data-feature', feature) }}
  {{ utility.attr_if('data-old', is_old) }}
>
  <div data-card="inner">
    {% if meta %}
      <div data-meta="card">
        {{ meta | safe }}
      </div>
    {% endif %}

    {% if name %}
      <h4 data-card="title" id="{{ id }}">
        {{ name | safe }}
      </h4>
    {% endif %}

    {% if summary %}
      <div data-card="summary">
        {{ summary | safe }}
      </div>
    {% endif %}
  </div>
</article>
{% endmacro %}
