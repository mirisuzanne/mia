{% import "utility.macros.njk" as utility %}
{% import "cards.macros.njk" as cards %}

{% macro section(
  tags
) %}
  {% call cards.section(
    title=utility.section_title('by popular demandâ€¦')
  ) %}
    {% for segment in tags | groupTags %}
      {%- set title -%}
        {%- if segment.group != 'top' -%}~{%- endif -%}
        {{ segment.group }}
      {%- endset -%}
      {{ group(
        title=title,
        segment=segment.tags,
        all=tags.all
      ) }}
    {% endfor %}
  {% endcall %}
{% endmacro %}

{% macro group(
  title,
  segment,
  all
) %}
  {% if segment | length %}
    {% call cards.group(title) %}
      {{ list(
        tags=segment,
        all=all
      ) }}
    {% endcall %}
  {% endif %}
{% endmacro %}

{% macro list(
  tags,
  all
) %}
  {% if tags | length %}
    {% call cards.list(reverse) %}
      {% for tag in tags %}
        {{ show_tag(
          tag=tag,
          all=all
        ) }}
      {% endfor %}
    {% endcall %}
  {% endif %}
{% endmacro %}

{% macro show_tag(
  tag,
  all
) %}
  {% call cards.item() %}
    {{ cards.meta(tag_meta(tag.data)) }}
    {{ cards.main(utility.tag_link(tag.tag, all)) }}
  {% endcall %}
{% endmacro %}

{% macro tag_meta(
  data
) %}
  e.g.
  {% set page = data | first %}
  {{ utility.link_if(
    page.data.title | mdInline,
    page.url
  ) }}
{% endmacro %}
