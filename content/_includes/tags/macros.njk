{% import "utility.macros.njk" as utility %}
{% import "cards.macros.njk" as cards %}

{% macro section(
  all
) %}
  {% set section_title = [all | getTags | list | length, 'tags'] | join(' ') %}
  {% call cards.section(section_title) %}
    {% for segment in all | groupTags %}
      {%- set title -%}
        {{ segment.group }}
        <span class="sr-only">tags</span>
      {%- endset -%}

      {{ group(
        title=title,
        segment=segment.tags | sort(true, false, 'pages'),
        all=all
      ) }}
    {% endfor %}
  {% endcall %}
{% endmacro %}


{% macro group(
  title,
  segment,
  all
) %}
  {% if segment | length %}
    {{ cards.group(
      title=title,
      content=list(segment, all)
    ) }}
  {% endif %}
{% endmacro %}


{% macro list(
  tags,
  all
) %}
  {% for tag in tags %}
    {{ show_tag(
      tag=tag,
      all=all,
      index=loop.index
    ) }}
  {% endfor %}
{% endmacro %}


{% macro show_tag(
  tag,
  all,
  index
) %}
  {% set title = utility.tag_link(tag.tag, all) %}
  {{ cards.event(
    name=[title, tag.pages] | join(' | '),
    summary=tag_items(tag.tag, all),
    index=index
  ) }}
{% endmacro %}


{% macro tag_items(
  tag,
  all
) %}
  {% set data = all[tag] | withTag('_calendar') %}
  {% if data %}
    <ul>
    {% for item in data | byDate | only(0, 5) %}
      <li>
        {{ utility.link_if(
          item.data.title | mdInline,
          item.url
        ) }}
        {% if item.data.type and (item.data.type != tag) %}
          | <em>{{ item.data.type }}</em>
        {% endif %}
      </li>
    {% endfor %}
    </ul>
  {% endif %}
{% endmacro %}
